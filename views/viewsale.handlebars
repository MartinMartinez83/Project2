<link href="stylesheets/style.css" rel="stylesheet">

<div class="container">
    <div class="col-md-10 col-md-offset-1">
      <h2>Create Your Sale</h2>
      <div class="form-row">
        <div class="form-group col-md-12">
          <label for="saleName">Sale Name</label>
          <input type="text" class="form-control" id="saleName">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-12">
          <label for="saleDescription">Sale Description</label>
          <textarea type="textarea" class="form-control" rows="3" id="saleDescription"></textarea>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-12">
          <label for="saleItems">List Items to Sell</label>
          <table class="table table-bordered">
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Category</th>
                <th scope="col">Price</th>
                <th scope="col">Photo</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row" class="tableInput" id="id">1</th>
                <td class="tableInput" id="name">Bookcase</td>
                <td class="tableInput" id="description">5 shelf oak bookcase</td>
                <td class="tableInput" id="category">furniture</td>
                <td class="tableInput" id="price">$25.00</td>
                <td class="tableInput" id="photo">photo placeholder</td>
              </tr>
              <tr>
                <th scope="row" class="tableInput" id="id">2</th>
                <td class="tableInput" id="name">Women's Shirt</td>
                <td class="tableInput" id="description">Green ladies short sleeve t-shirt, size med</td>
                <td class="tableInput" id="category">clothing</td>
                <td class="tableInput" id="price">$5.00</td>
                <td class="tableInput" id="photo">photo placeholder</td>
              </tr>
              <tr>
                <th scope="row" class="tableInput" id="id"></th>
                <td class="tableInput" id="name"></td>
                <td class="tableInput" id="description"></td>
                <td class="tableInput" id="category"></td>
                <td class="tableInput" id="price"></td>
                <td class="tableInput" id="photo"></td>
              </tr>
            </tbody>
          </table>
        </div>
        <!-- <div class="form-row"> -->
            <h2>Seller Contact Info</h2>
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name">
              </div>
              <div class="form-group col-md-6">
                <label for="city">City</label>
                <input type="text" class="form-control" id="city">
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-md-12">
                <label for="contact">Contact Method</label>
                <input type="text" class="form-control" id="contactMethod">
                <!-- <small id="contactHelp" class="form-text text-muted">This is how buyers will contact you.</small> -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>